@model Practica2WB.Entities.VehiculoEnt
@{
    ViewBag.Title = "RegistrarVehiculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="col-md-6 m-auto stretch-card">
        <div class="card" style="background-color:#D8E3FF">
            <div class="card-body">
                <h4 class="card-title">Registro de Vehiculos</h4>
                <p class="card-description">Ingrese la informacion del vehiculo que desea agregar</p>

                @using (Html.BeginForm("RegistrarVehiculo", "Home", new { @class = "forms-sample" }))
                {
                    <div class="form-group">
                        <label for="exampleInputUsername1">Marca</label>
                        @Html.TextBoxFor(m => m.Marca, new { @class = "form-control", @placeholder = "Marca", @type = "text" })

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Modelo</label>
                        @Html.TextBoxFor(m => m.Modelo, new { @class = "form-control", @placeholder = "Modelo", @type = "text" })

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Color</label>
                        @Html.TextBoxFor(m => m.Color, new { @class = "form-control", @placeholder = "Color", @type = "text" })

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Precio</label>
                        @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", @placeholder = "Precio", @type = "number" })

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Vendedor</label>
                        @Html.DropDownListFor(m => m.IdVendedor, ViewBag.Vendedores as List<SelectListItem>, new { @class = "form-control", @placeholder = "Vendedor", @type = "text" })

                    </div>
                    <div class="m-auto" style="text-align:center">
                        <input type="submit" class="btn btn-primary m-auto" value="Registrar">
                    </div>
                }
            </div>
        </div>
    </div>

</div>

